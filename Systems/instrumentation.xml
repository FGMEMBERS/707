<!--
707 usage: Note that this file is essentially a copy of the generic instrumentation.
The only reason it's here is to specify a second ADF.
-->

<PropertyList>

		<adf>
			<name>adf</name>
			<number>0</number>
		</adf>

		<adf>
			<name>adf</name>
			<number>1</number>
		</adf>

		<nav-radio>
			<name>nav</name>
			<number>0</number>
		</nav-radio>

		<nav-radio>
			<name>nav</name>
			<number>1</number>
		</nav-radio>

		<dme>
			<name>dme</name>
			<number>0</number>
		</dme>

		<dme>
			<name>dme</name>
			<number>1</number>
		</dme>

    <airspeed-indicator>
        <name>airspeed-indicator</name>
        <number>0</number>
        <total-pressure>/systems/pitot/total-pressure-inhg</total-pressure>
        <static-pressure>/systems/static/pressure-inhg</static-pressure>
    </airspeed-indicator>

    <altimeter>
        <name>altimeter</name>
        <number>0</number>
        <static-pressure>/systems/static/pressure-inhg</static-pressure>
    </altimeter>

    <attitude-indicator>
        <name>attitude-indicator</name>
        <number>0</number>
        <suction>/systems/vacuum/suction-inhg</suction>
    </attitude-indicator>

		<vertical-speed-indicator>
			<name>vertical-speed-indicator</name>
			<number>0</number>
			<static-pressure>/systems/static/pressure-inhg</static-pressure>
		</vertical-speed-indicator>

    <clock>
        <name>clock</name>
        <number>0</number>
    </clock> 
    
    <!-- Pilot -->
		<heading-indicator-dg>
		  <name>heading-indicator</name>
		  <number>0</number>
		  <suction>/systems/vacuum/suction-inhg</suction>
		</heading-indicator-dg>

		<!-- Copilot -->
		<heading-indicator-dg>
		  <name>heading-indicator</name>
		  <number>1</number>
		  <suction>/systems/vacuum/suction-inhg</suction>
		</heading-indicator-dg>

    <magnetic-compass>
        <name>magnetic-compass</name>
        <number>0</number>
    </magnetic-compass>

    <slip-skid-ball>
        <name>slip-skid-ball</name>
        <number>0</number>
    </slip-skid-ball>

		<turn-indicator>
			<name>turn-indicator</name>
			<number>0</number>
		</turn-indicator>

    <radar>
        <name>radar</name>
        <number>0</number>
    </radar>

    <mk-viii>
        <name>mk-viii</name>
        <number>0</number>
    </mk-viii> 

    <marker-beacon>
        <name>marker-beacon</name>
        <number>0</number>
    </marker-beacon> 

		<transponder>
		  <name type="string">transponder</name>
		  <number type="int">0</number>
		  <mode type="int">1</mode> <!-- 0 = Mode A, 1 = Mode C, 2 = Mode S -->
		  <bus-volts type="double">8.0</bus-volts>
		  <encoder-path type="string">/instrumentation/altimeter</encoder-path>
		  <kt70-compatibility type="bool">0</kt70-compatibility>
		</transponder>

</PropertyList>
