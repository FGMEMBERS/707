<PropertyList>
	<name>Checklist: Preflight</name>
	<description>Going around your aircraft before flight</description>

	<audio-dir>Aircraft/707/Tutorials</audio-dir>

	<init>
		<set>
			<property>controls/electric/battery-switch</property>
			<value>0</value>
		</set>
		<set>
			<property>/controls/flight/flaps</property>
			<value>0.0</value>
		</set>
		<set>
			<property>controls/flight/speedbrake-lever</property>
			<value>0</value>
		</set>
	</init>
	
	<!-- x/y/z == right/up/back -->
	<step>
		<message>Ok, we start the preflight preparation with a quick outside walk-around.</message>		
		<view>
			<view-number>1</view-number>
			<heading-offset-deg>182.1</heading-offset-deg>
			<pitch-offset-deg>-4.6</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>0.3</x-offset-m>
			<y-offset-m>1.8</y-offset-m>
			<z-offset-m>-32.0</z-offset-m>
			<field-of-view>70</field-of-view>
		</view>

	</step>
	
	<step>
		<message>Engine No.2 Blades look ok...</message>	
		<view>
			<view-number>1</view-number>
			<heading-offset-deg>180</heading-offset-deg>
			<pitch-offset-deg>-12.9</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-15.0</x-offset-m>
			<y-offset-m>2.4</y-offset-m>
			<z-offset-m>-16.0</z-offset-m>
		</view>
	</step>
	
	<step>
		<message>Engine No.1 Blades look ok...</message>	
		<view>
			<view-number>1</view-number>
			<heading-offset-deg>180.0</heading-offset-deg>
			<pitch-offset-deg>-12.9</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-20.0</x-offset-m>
			<y-offset-m>2.4</y-offset-m>
			<z-offset-m>-16.0</z-offset-m>
		</view>
	</step>
	
	<step>
		<message>Engine No.3 Blades look ok...</message>	
		<view>
			<view-number>1</view-number>
			<heading-offset-deg>180.0</heading-offset-deg>
			<pitch-offset-deg>-12.9</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>16.0</x-offset-m>
			<y-offset-m>2.4</y-offset-m>
			<z-offset-m>-16.0</z-offset-m>
		</view>
	</step>
	
	<step>
		<message>Engine No.4 Blades look ok...</message>	
		<view>
			<view-number>1</view-number>
			<heading-offset-deg>180.0</heading-offset-deg>
			<pitch-offset-deg>-12.9</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>20.0</x-offset-m>
			<y-offset-m>2.4</y-offset-m>
			<z-offset-m>-16.0</z-offset-m>
		</view>
	</step>

	<step>
		<message>Ok, preflight checklist complete! Continue with the "Engines Start-up".</message>
	</step>

	<end>
	</end>

</PropertyList>
