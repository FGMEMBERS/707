<?xml version="1.0"?>
<PropertyList>

	<path>adi.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>bank-index</object-name>
		<object-name>ringfront</object-name>
		<object-name>marker</object-name>
		<condition>
			<less-than><property>/controls/lighting/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>drum</object-name>
		<object-name>bkg</object-name>
		<condition>
			<less-than><property>/controls/lighting/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.4</red>
			<green>0.3</green>
			<blue>0.2</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>bank-index</object-name>
		<object-name>ringfront</object-name>
		<object-name>marker</object-name>
		<object-name>drum</object-name>
		<object-name>bkg</object-name>
		<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/controls/lighting/cabin-dim</property>
		</condition>
		<emission>
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
			<factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>support</object-name>
		<condition>
			<not><property>/controls/lighting/cabin-dim</property></not>
		</condition>
		<emission>
			<red>0.05</red>
			<green>0.05</green>
			<blue>0.05</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>support</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/controls/lighting/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>gaugeKnob</object-name>
		<object-name>gaugeScale</object-name>
		<condition>
			<less-than><property>/controls/lighting/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>gaugeKnob</object-name>
		<object-name>gaugeScale</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/controls/lighting/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
	</effect>
	
	<!-- the object action -->
	
		
	<animation>
		<type>rotate</type>
		<object-name>drum</object-name>
		<property>orientation/roll-deg</property>
		<center>
			<x-m>-0.0113</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>bkg</object-name>
		<property>orientation/roll-deg</property>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>bank-index</object-name>
		<property>orientation/roll-deg</property>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>drum</object-name>
		<property>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
		<interpolation>
		  <entry><ind>-6000</ind><dep>-150</dep></entry>
		  <entry><ind>-4000</ind><dep>-120</dep></entry>
		  <entry><ind>-2000</ind><dep>-60</dep></entry>
		  <entry><ind>-1000</ind><dep>-30</dep></entry>
		  <entry><ind>    0</ind><dep>  0</dep></entry>
		  <entry><ind> 1000</ind><dep> 30</dep></entry>
		  <entry><ind> 2000</ind><dep> 60</dep></entry>
		  <entry><ind> 4000</ind><dep> 120</dep></entry>
		  <entry><ind> 6000</ind><dep> 150</dep></entry> 
		</interpolation>
		<center>
			<x-m>-0.022</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>50</max-m>
	</animation>
	
  
  <!-- The knop -->
  <animation>
      <type>translate</type>
      <object-name>gaugeKnob</object-name>
      <property>/instrumentation/adi/knob-pos</property>
      <factor>0.003</factor>
      <axis>
          <x> 1.0</x>
          <y> 0.0</y>
          <z> 0.0</z>
      </axis>
      <center>
          <x-m> 0.007</x-m>
          <y-m> 0.026</y-m>
          <z-m>-0.026</z-m>
      </center>
  </animation> 
     
	<animation>
		<type>pick</type>
		<object-name>gaugeKnob</object-name>
		<object-name>gaugeScale</object-name>
		<visible>true</visible>
      <action>
        <name>erec gauge</name>
        <button>0</button>
      	<repeatable>false</repeatable>
        <binding>
          <command>nasal</command>
          <script>b707.gauge_erec();</script>
        </binding>
        <mod-up>
          <binding>
            <command>property-assign</command>
            <property>/instrumentation/adi/knob-pos</property>  
            <value>0.0</value>
          </binding>
        </mod-up>
      </action>
  </animation>
  
    <animation>
      <type>rotate</type>
      <object-name>gaugeKnob</object-name>
      <property>/instrumentation/altimeter/setting-inhg</property>
			<interpolation>
				<entry><ind>30.0</ind><dep>  60</dep></entry>
				<entry><ind>29.92</ind><dep>  0</dep></entry>
				<entry><ind>29.84</ind><dep>-60</dep></entry>
			</interpolation>
      <center>
        <x-m> 0.007</x-m>
        <y-m> 0.026</y-m>
        <z-m>-0.026</z-m>
      </center>
      <axis>
        <x> -1 </x>
        <y>  0 </y>
        <z>  0 </z>
      </axis>
    </animation>


    <animation>
        <type>pick</type>
      	<object-name>gaugeKnob</object-name>
      	<object-name>gaugeScale</object-name>
        <visible>true</visible>
        <action>
            <button>3</button>
            <binding>
            <command>property-adjust</command>
            <property>/instrumentation/altimeter/setting-inhg</property>
            <step>0.01</step>
            <min>29.84</min>
            <max>30.0</max>
            <wrap>false</wrap>
            </binding>
        </action>
        <action>
            <button>4</button>
            <binding>
            <command>property-adjust</command>
            <property>/instrumentation/altimeter/setting-inhg</property>
            <step>-0.01</step>
            <min>29.84</min>
            <max>30.0</max>
            <wrap>false</wrap>
            </binding>
        </action>
    </animation>

</PropertyList>
