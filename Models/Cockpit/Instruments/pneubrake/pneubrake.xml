<?xml version="1.0"?>
<PropertyList>

  <path>pneubrake.ac</path>

	<animation>
		<type>material</type>
		<object-name>brake</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
			<red>0.3</red>
			<green>0.2</green>
			<blue>0.15</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>shadow</object-name>
		<emission>
			<red>0.15</red>
			<green>0.1</green>
			<blue>0.075</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
  </effect>
  
    <!-- The warn knop -->
    <animation>
        <type>rotate</type>
        <object-name>brake</object-name>
        <property>/controls/gear/brake-parking</property>
        <factor>90</factor>
        <axis>
            <x> 1.0</x>
            <y> 0.0</y>
            <z> 0.0</z>
        </axis>
        <center>
            <x-m> 0.0</x-m>
            <y-m>-0.213</y-m>
            <z-m>0.976</z-m>
        </center>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>brake</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
          <binding>
            <command>property-assign</command>
            <property>/controls/gear/brake-parking</property>  
            <value>1.0</value>
          </binding>
        <mod-up>
          <binding>
            <command>property-assign</command>
            <property>/controls/gear/brake-parking</property>  
            <value>0.0</value>
          </binding>
        </mod-up>
      </action>
    </animation>

</PropertyList>
