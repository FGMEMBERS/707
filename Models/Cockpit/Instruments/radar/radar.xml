<?xml version="1.0"?>

<PropertyList>

	<path>radar.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>radarblade</object-name>
		<condition>
			<less-than><property>/controls/lighting/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.6</green>
			<blue>0.0</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>radarblade</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/controls/lighting/cabin-dim</property>
		</condition>
		<emission>
			<red>0.4</red>
			<green>0.8</green>
			<blue>0.0</blue>
			<factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>radarblade</object-name>
		<property>/sim/time/elapsed-sec</property>
		<factor>40</factor>
		<center>
			<x-m> 0.0</x-m>
			<y-m> 0.0</y-m>
			<z-m> 0.0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>noshadow</type>
		<object-name>radarblade</object-name>
		<object-name>mp</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>radarblade</object-name>
		<object-name>mp</object-name>
	</effect>

<!-- TCAS ANIMATIONS -->

<!-- MULTIPLAYER -->

<!-- mp1 -->

	<animation>
		<type>select</type>
		<object-name>mp</object-name>
		<condition>
		  <or>
				<equals>
					<property>instrumentation/mptcas/mp[0]/show-half</property>
					<value>1</value>
				</equals>
				<equals>
					<property>instrumentation/mptcas/mp[0]/show</property>
					<value>1</value>
				</equals>
			</or>
		</condition>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>mp</object-name>
		<visible>true</visible>
		<action>
			<name>show info</name>
			<button>0</button>
			<repeatable>true</repeatable>			
			<binding>
				<command>nasal</command>
				<script>b707.show_mp_info(0)</script>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>mp</object-name>
		<property>instrumentation/mptcas/mp[0]/bearing-defl</property>
		<factor>0.85</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>mp</object-name>
		<property>instrumentation/mptcas/mp[0]/distance-nm</property>
		<factor>0.00366696</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>mp</object-name>
		<property>instrumentation/mptcas/mp[0]/bearing-defl</property>
		<factor>-0.85</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
