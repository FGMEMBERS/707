<animation>
  <type>rotate</type>
  <object-name>hdg-knob</object-name>
  <property>/autopilot/settings/heading-bug-deg</property>
  <factor>5</factor>
  <center>
    <x-m>0</x-m>
    <y-m>0.03898</y-m>
    <z-m>-0.0396</z-m>
  </center>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>hsi-ring</object-name>
  <property>/instrumentation/heading-indicator/indicated-heading-deg</property>
  <factor> -1 </factor>
  <axis>
    <x> -1 </x>
    <y>  0 </y>
    <z>  0 </z>
  </axis>
</animation>

