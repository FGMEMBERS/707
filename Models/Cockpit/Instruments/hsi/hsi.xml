<?xml version="1.0"?>
<PropertyList>

  <path>hsi.ac</path>
  
	<animation>
		<type>material</type>
		<object-name>off-flag</object-name>
		<object-name>sphere</object-name>
		<object-name>hdg-arrow</object-name>
		<object-name>hsi-ring</object-name>
		<object-name>needle</object-name>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>arrow</object-name>
		<emission>
			<red>0.4</red>
			<green>0.3</green>
			<blue>0.2</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>mount</object-name>
		<object-name>hdg-knob</object-name>
		<object-name>course-knob</object-name>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
 
	<animation>
		<type>noshadow</type>
		<object-name>hsi-ring-close</object-name>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>hsi-ring-close</object-name>
		<object-name>shadow</object-name>
  </effect>

	<animation>
		<type>select</type>
		<object-name>off-flag</object-name>
		<condition>
		  <or>
		    <not><property>/instrumentation/nav[0]/nav-loc</property></not>
				<and>
				  <property>/instrumentation/nav[0]/nav-loc</property>
				  <not><property>/instrumentation/nav[0]/in-range</property></not>
				</and>
				<less-than>
					<property>/systems/electrical/right-bus</property>
					<value>12</value>
				</less-than>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>CrsNum.off</object-name>
		<condition>
			<less-than>
		  	<property>/systems/electrical/right-bus</property>
		  	<value>12</value>
		  </less-than>
		</condition>
	</animation>
	
