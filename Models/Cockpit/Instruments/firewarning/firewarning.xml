<?xml version="1.0"?>

<PropertyList>

<path>firewarning.ac</path>


<!-- the four lamps in the center are beeing indicator for engines off or fire -->
<animation>
  <type>material</type>
  <object-name>lampone</object-name>
  <object-name>lamptwo</object-name>
  <object-name>lampthree</object-name>
  <object-name>lampfour</object-name> 
  <condition>
		<not><property>/sim/rendering/rembrandt/enabled</property></not>
  </condition>
  <emission>
    <red>1.0</red>
    <green>0.2</green>
    <blue>0.0</blue>
    <factor-prop>/controls/lighting/panel-norm</factor-prop>
  </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>lampone</object-name>
  <condition>
    <property>/controls/electric/APU-generator</property>
    <or>
    	<property>/controls/engines/engine[0]/cutoff</property>
    	<not><property>/engines/engine[0]/running</property></not>
    	<less-than>
    		<property>/engines/engine[0]/n2</property>
    		<value>59.5</value>
    	</less-than>
    </or>
  </condition>
</animation>


<animation>
  <type>select</type>
  <object-name>lamptwo</object-name>
  <condition>
    <property>/controls/electric/APU-generator</property>
    <or>
    	<property>/controls/engines/engine[1]/cutoff</property>
    	<not><property>/engines/engine[1]/running</property></not>
    	<less-than>
    		<property>/engines/engine[1]/n2</property>
    		<value>59.5</value>
    	</less-than>
    </or>
  </condition>
</animation>


<animation>
  <type>select</type>
  <object-name>lampthree</object-name>
  <condition>
    <property>/controls/electric/APU-generator</property>
    <or>
    	<property>/controls/engines/engine[2]/cutoff</property>
    	<not><property>/engines/engine[2]/running</property></not>
    	<less-than>
    		<property>/engines/engine[2]/n2</property>
    		<value>59.5</value>
    	</less-than>
    </or>
  </condition>
</animation>


<animation>
  <type>select</type>
  <object-name>lampfour</object-name>
  <condition>
    <property>/controls/electric/APU-generator</property>
    <or>
    	<property>/controls/engines/engine[3]/cutoff</property>
    	<not><property>/engines/engine[3]/running</property></not>
    	<less-than>
    		<property>/engines/engine[3]/n2</property>
    		<value>59.5</value>
    	</less-than>
    </or>
  </condition>
</animation>



</PropertyList>
