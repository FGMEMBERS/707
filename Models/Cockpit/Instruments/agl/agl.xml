<?xml version="1.0"?>
<PropertyList>

  <path>agl.ac</path>
	
	<!-- light without cabin light -->
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<emission>
			<red>0.4</red>
			<green>0.3</green>
			<blue>0.2</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>arrow</object-name>
		<object-name>mda-needle</object-name>
		<object-name>off-flag</object-name>
		<object-name>altnum100</object-name>
		<object-name>altnum1000</object-name>
		<object-name>altnum10000</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>sockle</object-name>
		<object-name>switchsup</object-name>
		<emission>
			<red>0.2</red>
			<green>0.1</green>
			<blue>0.05</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>switch</object-name>
		<object-name>agl-knob</object-name>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	 
	<animation>
		<type>material</type>
		<object-name>lampOn</object-name>
		<emission>
		  <red>   1.0 </red>
		  <green> 0.2 </green>
		  <blue>  0.0 </blue>
		</emission>
	</animation>

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
		<object-name>switchshadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
		<object-name>switchshadow</object-name>
  </effect>
  
	<animation>
		<type>select</type>
		<object-name>lampOn</object-name>
		<condition>
		  <or>
		    <and>
				  <property>/instrumentation/aglradar/power-btn</property>
				  <property>/instrumentation/aglradar/mda-lamp</property>
				</and>
		    <property>/controls/test/warn-knob</property>
		  </or>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>off-flag</object-name>
		<condition>
		   <not><property>/instrumentation/aglradar/power-btn</property></not>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>altnum.off</object-name>
		<condition>
		  	<not><property>/instrumentation/aglradar/power-btn</property></not>
		</condition>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>switch</object-name>
		<property>/instrumentation/aglradar/power-btn</property>
		<factor>-60</factor>
		<center>
		  <x-m>0.0467</x-m>
		  <y-m>0.0</y-m>
		  <z-m>0.0738</z-m>
		</center>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>switch</object-name>
		<object-name>sockle</object-name>
		<object-name>switchsup</object-name>
		<visible>true</visible>
		  <action>
		    <name>on_off</name>
		    <button>0</button>
		    <repeatable>true</repeatable>
				<binding>
					 <command>property-toggle</command>
					 <property>/instrumentation/aglradar/power-btn</property>
				</binding>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch2</property>
        </binding>
		  </action>
	</animation>
	
	<!-- the alt arrow -->
  
  <animation>
		<type>translate</type>
		<object-name>arrow</object-name>
		<property>/instrumentation/aglradar/alt-ft</property>
		<interpolation>
			<entry><ind>-350</ind><dep> -0.03586</dep></entry>
		  <entry><ind>   0</ind><dep>  0.0		 </dep></entry>
		  <entry><ind> 350</ind><dep>  0.03586</dep></entry>
		</interpolation>
		<axis>
		  <x>0</x>
		  <y>0</y>
		  <z>1</z>
		</axis>
	</animation>

  <animation>
		<type>translate</type>
		<object-name>mda-needle</object-name>
		<property>/instrumentation/aglradar/alt-offset-ft</property>
		<interpolation>
			<entry><ind>-350</ind><dep> -0.03586</dep></entry>
		  <entry><ind>   0</ind><dep>  0.0		 </dep></entry>
		  <entry><ind> 350</ind><dep>  0.03586</dep></entry>
		</interpolation>
		<axis>
		  <x>0</x>
		  <y>0</y>
		  <z>1</z>
		</axis>
	</animation>
	
  <!-- the Flightlevel digits -->	
  <animation>
      <type>textranslate</type>
      <object-name>altnum100</object-name>
      <property>/instrumentation/aglradar/alt-offset-ft</property>
      <factor>0.1</factor>
      <step>1</step>
      <axis>
          <x>0</x>
          <y>1</y>
          <z>0</z>
      </axis>
  </animation>

  <animation>
      <type>textranslate</type>
      <object-name>altnum1000</object-name>
      <property>/instrumentation/aglradar/alt-offset-ft</property>
      <factor>0.01</factor>
      <step>10</step>
      <axis>
          <x>0</x>
          <y>1</y>
          <z>0</z>
      </axis>
  </animation>

  <animation>
      <type>textranslate</type>
      <object-name>altnum10000</object-name>
      <property>/instrumentation/aglradar/alt-offset-ft</property>
      <factor>0.001</factor>
      <step>100</step>
      <axis>
          <x>0</x>
          <y>1</y>
          <z>0</z>
      </axis>
  </animation>
 
 <!-- the offset knob --> 
	<animation>
		<type>rotate</type>
		<object-name>agl-knob</object-name>
		<property>/instrumentation/aglradar/alt-offset-ft</property>
		<factor>1</factor>
		<center>
		  <x-m>0</x-m>
		  <y-m>0.0095</y-m>
		  <z-m>-0.0347</z-m>
		</center>
		<axis>
		  <x>1</x>
		  <y>0</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>agl-knob</object-name>
		<object-name>face</object-name>
		<visible>true</visible>
		  <action>
		    <name>calibrate reset</name>
		    <button>0</button>
		    <repeatable>true</repeatable>
				<binding>
					 <command>property-assign</command>
					 <property>/instrumentation/aglradar/alt-offset-ft</property>
					 <value>0</value>
				</binding>
				<binding>
					<command>property-toggle</command>
					<property>/sim/sound/switch3</property>
				</binding>
		  </action>  
		  <action>
		      <button>3</button>
		      <binding>
		          <condition>
		              <not>
		                  <property>devices/status/keyboard/shift</property>
		              </not>
		          </condition>
						  <command>property-adjust</command>
						  <property>/instrumentation/aglradar/alt-offset-ft</property>
						  <step>5</step>
						  <min>0</min>
						  <max>400</max>
						  <wrap>false</wrap>
		      </binding>
		      <binding>
		          <condition>
		              <property>devices/status/keyboard/shift</property>
		          </condition>
						  <command>property-adjust</command>
						  <property>/instrumentation/aglradar/alt-offset-ft</property>
						  <step>100</step>
						  <min>0</min>
						  <max>400</max>
						  <wrap>false</wrap>
		      </binding>
					<binding>
						<command>property-toggle</command>
						<property>/sim/sound/switch3</property>
					</binding>
		  </action>
		  <action>
		      <button>4</button>
		      <binding>
		          <condition>
		              <not>
		                  <property>devices/status/keyboard/shift</property>
		              </not>
		          </condition>
						  <command>property-adjust</command>
						  <property>/instrumentation/aglradar/alt-offset-ft</property>
						  <step>-5</step>
						  <min>0</min>
						  <max>400</max>
						  <wrap>false</wrap>
		      </binding>
		      <binding>
		          <condition>
		              <property>devices/status/keyboard/shift</property>
		          </condition>
						  <command>property-adjust</command>
						  <property>/instrumentation/aglradar/alt-offset-ft</property>
						  <step>-100</step>
						  <min>0</min>
						  <max>400</max>
						  <wrap>false</wrap>
		      </binding>
					<binding>
						<command>property-toggle</command>
						<property>/sim/sound/switch3</property>
					</binding>
		  </action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>face</object-name>
		<visible>true</visible>
		  <action>
		    <name>show alt</name>
		    <button>0</button>
		    <repeatable>true</repeatable>
				<binding>
					 <command>nasal</command>
					 <script>b707.show_alti();</script>
				</binding>
		  </action>
	</animation>
</PropertyList>
