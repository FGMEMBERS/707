<?xml version="1.0"?>

<PropertyList>

<path>oil_and_flaps.ac</path>

<animation>
	<type>material</type>
  <object-name>LampGreen</object-name>
  <object-name>LampAmber</object-name>
  <object-name>Sockle</object-name>
	<condition>
		<less-than><property>/controls/lighting/cabin-dim</property><value>0.8</value></less-than>
	</condition>
	<emission>
		<red>0.2</red>
		<green>0.2</green>
		<blue>0.2</blue>
		<factor-prop>/controls/lighting/panel-norm</factor-prop>
	</emission>
</animation>

<animation>
	<type>material</type>
  <object-name>LampGreen</object-name>
  <object-name>LampAmber</object-name>
  <object-name>Sockle</object-name>
  <object-name>shadow</object-name>
	<condition>
		<not><property>/sim/rendering/rembrandt/enabled</property></not>
		<property>/controls/lighting/cabin-dim</property>
	</condition>
	<emission>
	  <red>0.3</red>
	  <green>0.3</green>
	  <blue>0.3</blue>
	  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
	</emission>
</animation>	

<animation>
  <type>noshadow</type>
  <object-name>LampGreen</object-name>
  <object-name>LampAmber</object-name>
  <object-name>LampGreenON</object-name>
  <object-name>LampAmberON</object-name>
</animation>

<effect>
	<inherits-from>Effects/model-transparent</inherits-from>
	<object-name>shadow</object-name>
</effect>

<animation>
  <type>material</type>
  <object-name>LampAmberON</object-name>
  <emission>
    <red>   0.5 </red>
    <green> 0.3 </green>
    <blue>  0 </blue>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>LampGreenON</object-name>
  <emission>
    <red>   0 </red>
    <green> 1.0 </green>
    <blue>  0 </blue>
  </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>LampGreenON</object-name>
  <condition>
    <or>
      <property>surface-positions/flap-pos-norm</property>
      <property>/controls/test/warn-knob</property>
    </or>
  </condition>
</animation>
<animation>
  <type>select</type>
  <object-name>LampGreen</object-name>
  <condition>
    <and>
      <not><property>surface-positions/flap-pos-norm</property></not>
      <not><property>/controls/test/warn-knob</property></not>
    </and>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>LampAmberON</object-name>
  <condition>
    <or>
    	<less-than>
      	<property>/engines/engine[0]/oil-pressure-psi</property>
      	<value>6.1</value>
      </less-than>
      <property>/controls/test/warn-knob</property>
    </or>
  </condition>
</animation>
<animation>
  <type>select</type>
  <object-name>LampAmber</object-name>
  <condition>
    <and>
      <greater-than>
      	<property>/engines/engine[0]/oil-pressure-psi</property>
      	<value>6.1</value>
      </greater-than>
      <not><property>/controls/test/warn-knob</property></not>
    </and>
  </condition>
</animation>

</PropertyList>

