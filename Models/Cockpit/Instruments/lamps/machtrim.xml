<?xml version="1.0"?>

<PropertyList>

<path>machtrim.ac</path>

<animation>
	<type>material</type>
  <object-name>LampBlue</object-name>
  <object-name>switch</object-name>
  <object-name>sockle</object-name>
	<condition>
		<less-than><property>/controls/lighting/cabin-dim</property><value>0.8</value></less-than>
	</condition>
	<emission>
		<red>0.15</red>
		<green>0.15</green>
		<blue>0.15</blue>
		<factor-prop>/controls/lighting/panel-norm</factor-prop>
	</emission>
</animation>

<animation>
	<type>material</type>
  <object-name>LampBlue</object-name>
  <object-name>switch</object-name>
  <object-name>sockle</object-name>
  <object-name>sup</object-name>
  <object-name>shadow</object-name>
	<condition>
		<not><property>/sim/rendering/rembrandt/enabled</property></not>
		<property>/controls/lighting/cabin-dim</property>
	</condition>
	<emission>
	  <red>0.25</red>
	  <green>0.25</green>
	  <blue>0.25</blue>
	  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
	</emission>
</animation>	

<animation>
  <type>noshadow</type>
  <object-name>LampBlue</object-name>
  <object-name>LampBlueON</object-name>
</animation>

<effect>
	<inherits-from>Effects/model-transparent</inherits-from>
	<object-name>shadow</object-name>
</effect>

<animation>
  <type>material</type>
  <object-name>LampBlueON</object-name>
  <emission>
    <red>   0.5 </red>
    <green> 1.0 </green>
    <blue>  1.0 </blue>
  </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>LampBlueON</object-name>
  <condition>
    <or>
      <property>/controls/special/mach-trim-switch</property>
      <property>/controls/test/warn-knob</property>
    </or>
  </condition>
</animation>
<animation>
  <type>select</type>
  <object-name>LampBlue</object-name>
  <condition>
    <and>
      <not><property>/controls/special/mach-trim-switch</property></not>
      <not><property>/controls/test/warn-knob</property></not>
    </and>
  </condition>
</animation>

	<animation>
		<type>rotate</type>
		<object-name>switch</object-name>
		<property>/controls/special/mach-trim-switch</property>
		<factor>-60</factor>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>switch</object-name>
		<object-name>sockle</object-name>
		<visible>true</visible>
		  <action>
		    <name>on_off_slats</name>
		    <button>0</button>
		    <repeatable>true</repeatable>
				<binding>
					 <command>property-toggle</command>
					 <property>/controls/special/mach-trim-switch</property>
				</binding>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch2</property>
        </binding>
		  </action>
	</animation>

</PropertyList>

