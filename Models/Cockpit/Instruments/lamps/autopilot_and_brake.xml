<?xml version="1.0"?>

<PropertyList>

<path>autopilot_and_brake.ac</path>

<animation>
	<type>material</type>
  <object-name>LampAmber</object-name>
  <object-name>LampAmber.001</object-name>
  <object-name>Sockle</object-name>
	<condition>
		<less-than><property>/controls/lighting/cabin-dim</property><value>0.8</value></less-than>
	</condition>
	<emission>
		<red>0.2</red>
		<green>0.2</green>
		<blue>0.2</blue>
		<factor-prop>/controls/lighting/panel-norm</factor-prop>
	</emission>
</animation>

<animation>
	<type>material</type>
  <object-name>LampAmber</object-name>
  <object-name>LampAmber.001</object-name>
  <object-name>Sockle</object-name>
	<condition>
		<not><property>/sim/rendering/rembrandt/enabled</property></not>
		<property>/controls/lighting/cabin-dim</property>
	</condition>
	<emission>
	  <red>0.3</red>
	  <green>0.3</green>
	  <blue>0.3</blue>
	  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
	</emission>
</animation>

<animation>
  <type>noshadow</type>
  <object-name>LampAmberON</object-name>
  <object-name>LampAmberON.001</object-name>  
  <object-name>LampAmber</object-name>
  <object-name>LampAmber.001</object-name>
</animation>

<effect>
	<inherits-from>Effects/model-transparent</inherits-from>
	<object-name>shadow</object-name>
</effect>

<animation>
  <type>material</type>
  <object-name>LampAmberON</object-name>
  <object-name>LampAmberON.001</object-name>
  <emission>
    <red>   1.0 </red>
    <green> 0.8 </green>
    <blue>  0.4 </blue>
  </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>LampAmberON</object-name>
  <condition>
    <or>
      <property>/controls/gear/brake-parking</property>
      <property>/controls/test/warn-knob</property>
    </or>
  </condition>
</animation>
<animation>
  <type>select</type>
  <object-name>LampAmber</object-name>
  <condition>
    <and>
      <not><property>/controls/gear/brake-parking</property></not>
      <not><property>/controls/test/warn-knob</property></not>
    </and>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>LampAmberON.001</object-name>
  <condition>
    <or>
			<and>
        <greater-than>
          <property>/systems/electrical/right-bus</property>
          <value>12</value>
        </greater-than>
		    <property>/autopilot/switches/ap</property>
		  </and>
      <property>/controls/test/warn-knob</property>
    </or>
  </condition>
</animation>
<animation>
  <type>select</type>
  <object-name>LampAmber.001</object-name>
  <condition>
    <and>
      <or>     
		  	<not><property>/autopilot/switches/ap</property></not>
		  	<less-than>
          <property>/systems/electrical/right-bus</property>
          <value>12</value>
        </less-than>
		  </or>
      <not><property>/controls/test/warn-knob</property></not>
    </and>
  </condition>
</animation>


</PropertyList>

