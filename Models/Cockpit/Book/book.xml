<PropertyList>

 <path>book.ac</path>
 
	<animation>
		<type>material</type>
		<object-name>back</object-name>
		<object-name>board</object-name>
		<object-name>bracket</object-name>
		<object-name>pages</object-name>
		<object-name>pages.001</object-name>
		<object-name>saddle</object-name>
		<object-name>flagGB</object-name>
		<object-name>flagGER</object-name>
		<object-name>flagES</object-name>
		<condition>	
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>pages.001</object-name>
		<condition>	
			<and>	
				<greater-than>
					<property>/b707/manual/page</property>
					<value>0</value>
				</greater-than>
				<greater-than>
		  		<property>/b707/manual/board</property>
					<value>0.94</value>
				</greater-than>
			</and>
		</condition>
	</animation>
	
	<!-- Open cover -->
	<animation>
		  <type>rotate</type>
		  <object-name>board</object-name>
		  <object-name>saddle</object-name>
		  <property>/b707/manual/board</property>
			<interpolation>
				<entry><ind>0.0</ind><dep>  0.0</dep></entry>
				<entry><ind>0.6</ind><dep>-100.0</dep></entry>
			</interpolation>
		  <axis>
		   <x>0</x>
		   <y>1</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m>0.0004</x-m>
		  <y-m>0.0</y-m>
		  <z-m>0.0036</z-m>
		  </center>  
	</animation>
	
	<animation>
		  <type>rotate</type>
		  <object-name>board</object-name>
		  <property>/b707/manual/board</property>
			<interpolation>
				<entry><ind>0.6</ind><dep>   0.0</dep></entry>
				<entry><ind>1.0</ind><dep> -85.0</dep></entry>
			</interpolation>
		  <axis>
		   <x>0</x>
		   <y>1</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m>0.0068</x-m>
		  <y-m>0.0</y-m>
		  <z-m>0.0445</z-m>
		  </center>  
	</animation>

	<animation>
		  <type>pick</type>
		  <object-name>board</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
        <binding>
            <command>nasal</command>
            <script>
            	var b = getprop("/b707/manual/board") or 0;
            	if(b){
            		interpolate("/b707/manual/board", 0, 0.4);
            	}else{
            		interpolate("/b707/manual/board", 1, 0.4);
            	}
            </script>
        </binding>          
		  </action>
	</animation> 

	<animation>
		  <type>pick</type>
		  <object-name>flagGB</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
        <binding>
				  <command>property-assign</command>
				  <property>/b707/manual/page</property>
				  <value>2</value>
        </binding> 
				<binding>
				  <command>nasal</command>
				  <script>b707.manual();</script>
				</binding>	         
		  </action>
	</animation> 	

	<animation>
		  <type>pick</type>
		  <object-name>flagES</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
        <binding>
				  <command>property-assign</command>
				  <property>/b707/manual/page</property>
				  <value>11</value>
        </binding>
				<binding>
				  <command>nasal</command>
				  <script>b707.manual();</script>
				</binding>	          
		  </action>
	</animation>

	<animation>
		  <type>pick</type>
		  <object-name>flagGER</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
        <binding>
				  <command>property-assign</command>
				  <property>/b707/manual/page</property>
				  <value>20</value>
        </binding> 
				<binding>
				  <command>nasal</command>
				  <script>b707.manual();</script>
				</binding>	         
		  </action>
	</animation> 	 	

	<animation>
		<type>pick</type>
		<object-name>pages</object-name>
		<action>
		  <button>0</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
		    <property>/b707/manual/page</property>
		    <step>1</step>
		    <min>0</min>
		    <max>100</max>
		    <wrap>false</wrap>
		  </binding>
		  <binding>
		    <command>nasal</command>
		    <script>b707.manual();</script>
		  </binding>					
		</action>
		<action>
		  <button>3</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
		    <property>/b707/manual/page</property>
		    <step>1</step>
		    <min>0</min>
		    <max>100</max>
		    <wrap>false</wrap>
		  </binding>	
		  <binding>
		    <command>nasal</command>
		    <script>b707.manual();</script>
		  </binding>				
		</action>
		<action>
		  <button>4</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
		    <property>/b707/manual/page</property>
		    <step>-1</step>
		    <min>0</min>
		    <max>100</max>
		    <wrap>false</wrap>
		  </binding>
		  <binding>
		    <command>nasal</command>
		    <script>b707.manual();</script>
		  </binding>					
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>pages.001</object-name>
		<action>
		  <button>0</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
		    <property>/b707/manual/page</property>
		    <step>-1</step>
		    <min>0</min>
		    <max>100</max>
		    <wrap>false</wrap>
		  </binding>
		  <binding>
		    <command>nasal</command>
		    <script>b707.manual();</script>
		  </binding>					
		</action>
		<action>
		  <button>3</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
		    <property>/b707/manual/page</property>
		    <step>-1</step>
		    <min>0</min>
		    <max>100</max>
		    <wrap>false</wrap>
		  </binding>
		  <binding>
		    <command>nasal</command>
		    <script>b707.manual();</script>
		  </binding>				
		</action>
		<action>
		  <button>4</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
		    <property>/b707/manual/page</property>
		    <step>1</step>
		    <min>0</min>
		    <max>100</max>
		    <wrap>false</wrap>
		  </binding>
		  <binding>
		    <command>nasal</command>
		    <script>b707.manual();</script>
		  </binding>				
		</action>
	</animation>
 
 <animation>
	<type>pick</type>
	<object-name>Book-PickCatcher</object-name>
	<visible>false</visible>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
				<![CDATA[
					book.manual.scroll(1);
				]]>
			</script>
		</binding>
	</action>
	<action>
		<button>1</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
				<![CDATA[
					book.manual.scroll(-1);
				]]>
			</script>
		</binding>
	</action>
	<action>
		<button>3</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
				<![CDATA[
					book.manual.scroll(1);
				]]>
			</script>
		</binding>
	</action>
	<action>
		<button>4</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
				<![CDATA[
					book.manual.scroll(-1);
				]]>
			</script>
		</binding>
	</action>
</animation>
</PropertyList>
