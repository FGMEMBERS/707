<?xml version="1.0"?>
<PropertyList>

  <path>yokes.ac</path>
  
	<animation>
		<type>material</type>
		<object-name>YokeCol</object-name>
		<object-name>ap-dis-knob-L</object-name>
		<object-name>ap-dis-knob-R</object-name>
		<object-name>yokeL</object-name>
		<object-name>logoL</object-name>
		<object-name>yokeR</object-name>
		<object-name>logoR</object-name>
		<condition>
			<less-than><property>/controls/lighting/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>YokeCol</object-name>
		<object-name>ap-dis-knob-L</object-name>
		<object-name>ap-dis-knob-R</object-name>
		<object-name>yokeL</object-name>
		<object-name>logoL</object-name>
		<object-name>yokeR</object-name>
		<object-name>logoR</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/controls/lighting/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>
	
  <animation>
    <type>rotate</type>
		<object-name>YokeCol</object-name>
		<object-name>ap-dis-knob-L</object-name>
		<object-name>ap-dis-knob-R</object-name>
		<object-name>yokeL</object-name>
		<object-name>logoL</object-name>
		<object-name>yokeR</object-name>
		<object-name>logoR</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> -8 </factor>
    <center>
      <x-m>-18.718 </x-m>
      <y-m>-0.462 </y-m>
      <z-m> 0.352 </z-m>
    </center>
    <axis>
      <x> 0 </x> 
      <y> 1 </y> 
      <z> 0 </z> 
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ap-dis-knob-L</object-name>
    <object-name>logoL</object-name>
    <object-name>yokeL</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> -50 </factor>
    <center>
      <x-m> 0.000 </x-m>
      <y-m>-0.462 </y-m>
      <z-m> 0.875 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ap-dis-knob-R</object-name>
    <object-name>logoR</object-name>
    <object-name>yokeR</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> -50 </factor>
    <center>
      <x-m> 0.000 </x-m>
      <y-m> 0.447 </y-m>
      <z-m> 0.875 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <!-- Rudder Foot Pedal Animations -->

	<animation>
		<type>translate</type>
		<object-name>ap-dis-knob-L</object-name>
		<property>/controls/special/yoke-switch1</property>
		<factor>0.003</factor>
    <axis>   
      <x1-m> -18.649</x1-m>
			<y1-m> -0.558</y1-m>
      <z1-m>  0.885</z1-m>
      <x2-m> -18.674</x2-m>
      <y2-m> -0.632</y2-m>
      <z2-m>  0.867</z2-m>
    </axis>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>ap-dis-knob-R</object-name>
		<property>/controls/special/yoke-switch1</property>
		<factor>0.003</factor>
    <axis>   
      <x1-m> -18.65</x1-m>
			<y1-m>  0.549</y1-m>
      <z1-m>  0.885</z1-m>
      <x2-m> -18.665</x2-m>
      <y2-m>  0.5883</y2-m>
      <z2-m>  0.874</z2-m>
    </axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>ap-dis-knob-R</object-name>
		<object-name>ap-dis-knob-L</object-name>
		<visible>true</visible>
		  <action>
		    <name>Yokeswitch1</name>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		      <command>property-toggle</command>
		      <property>/controls/special/yoke-switch1</property>
		    </binding>        
		    <mod-up>
          <binding>
		      <command>property-toggle</command>
		      <property>/controls/special/yoke-switch1</property>
          </binding>
        </mod-up>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch2</property>
        </binding>
		  </action>
	</animation>

</PropertyList>
