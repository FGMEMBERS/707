<?xml version="1.0"?>
<PropertyList>

  <path>yokes.ac</path>

	<animation>
		<type>material</type>
		<object-name>YokeColL</object-name>
		<object-name>ap-dis-knob-L</object-name>
		<object-name>ap-dis-knob-R</object-name>
		<object-name>yokeL</object-name>
		<object-name>logo</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/controls/lighting/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>
	
  <!-- Yokes -->
  <animation>
   <type>pick</type>
   <object-name>YokeColL</object-name>
   <visible>true</visible>
   <action>
     <button>0</button>
     <repeatable>false</repeatable>
     <binding>
       <command>property-toggle</command>
       <property>/sim/yokes-visible</property>
     </binding>
   </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>YokeColL</object-name>
    <object-name>ap-dis-knob-L</object-name>
    <object-name>ap-dis-knob-R</object-name>
    <object-name>logo</object-name>
    <object-name>yokeL</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> -8 </factor>
    <center>
      <x-m>-18.778 </x-m>
      <y-m>-0.462 </y-m>
      <z-m> 0.352 </z-m>
    </center>
    <axis>
      <x> 0 </x> 
      <y> 1 </y> 
      <z> 0 </z> 
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ap-dis-knob-L</object-name>
    <object-name>ap-dis-knob-R</object-name>
    <object-name>logo</object-name>
    <object-name>yokeL</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> -50 </factor>
    <center>
      <x-m> 0.000 </x-m>
      <y-m>-0.462 </y-m>
      <z-m> 0.875 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
