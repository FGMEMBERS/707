<?xml version="1.0"?>
<PropertyList>
 <path>extPower.ac</path>

	<animation>
		<type>material</type>
		<object-name>LampGreen</object-name>
		<object-name>LampBlue</object-name>
		<object-name>sockle</object-name>
		<object-name>switch</object-name>
		<condition>	
			<greater-than>
				<property>/b707/ess-bus</property>
				<value>20</value>
			</greater-than>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.2</red>
		  <green>0.2</green>
		  <blue>0.2</blue>
		  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>noshadow</type>
		<object-name>LampGreen</object-name>
		<object-name>LampBlue</object-name>
		<object-name>LampGreenON</object-name>
		<object-name>LampBlueON</object-name>
	</animation>

	<animation>
		<type>material</type>
		<object-name>LampGreenON</object-name>
		<emission>
		  <red>   0 </red>
		  <green> 1.0 </green>
		  <blue>  0 </blue>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>LampBlueON</object-name>
		<emission>
		  <red>   0.5 </red>
		  <green> 1.0 </green>
		  <blue>  1.0 </blue>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>LampGreenON</object-name>
		<condition>		
		  <or>
		    <property>/b707/external-power-connected</property>
		    <property>/controls/test/warn-knob</property>
		  </or>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>LampBlueON</object-name>
		<condition>	
			<greater-than>
				<property>/b707/ess-bus</property>
				<value>20</value>
			</greater-than>
		  <or>
		    <and>
		    	<property>/b707/external-power-connected</property>
		    	<property>/controls/electric/battery-switch</property>		    
		    	<property>/b707/ground-connect</property>
				</and>
		    <property>/controls/test/warn-knob</property>
		  </or>
		</condition>
	</animation>

  <!-- ground switch -->
	<animation>
		  <type>rotate</type>
		  <object-name>switch</object-name>
		  <property>/b707/ground-connect</property>
      <factor>-60</factor>
		  <axis>
		   <x>1</x>
		   <y>0</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m>0.0</x-m>
		  <y-m>0.004</y-m>
		  <z-m>0.0</z-m>
		  </center>  
	</animation>

	<animation>
		  <type>pick</type>
		  <object-name>switch</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		  			<property>/b707/ground-connect</property>
		    </binding>
        <binding>
            <command>nasal</command>
            <script>
            	var ex = getprop("/b707/external-power-connected") or 0;
            	if(!ex){
            		settimer(func{ setprop("/b707/ground-connect", 0);}, 0.2);
            	}
            </script>
        </binding>
		    <binding>
		      <command>property-toggle</command>
		      <property>/sim/sound/switch2</property>
		    </binding>
		  </action>
	</animation>

</PropertyList>
