<?xml version="1.0"?>
<PropertyList>
  <path>starter_switch.ac</path>

	<animation>
		<type>material</type>
		<object-name>cover</object-name>	
		<object-name>sockle</object-name>
		<object-name>switch</object-name>	
		<texture>starter3.png</texture>
	</animation>

	<animation>
		<type>material</type>
		<object-name>cover</object-name>	
		<object-name>sockle</object-name>
		<object-name>switch</object-name>		
		<condition>
			<less-than><property>/controls/lighting/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>cover</object-name>	
		<object-name>sockle</object-name>
		<object-name>switch</object-name>	
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/controls/lighting/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>	
	
	<animation>
		<type>material</type>
		<object-name>LampGreenON</object-name>
		<emission>
		  <red>   0 </red>
		  <green> 1.0 </green>
		  <blue>  0 </blue>
		</emission>
	</animation>

	<animation>
		<type>select</type>
		<object-name>LampGreenON</object-name>
		<condition>
		  <or>
		  	<and>
		  	  <property>/controls/special/starter[2]</property>
				  <less-than>
				  	<property>/engines/engine[2]/n2</property>
				  	<value>35</value>
				  </less-than>
				</and>
		    <property>/controls/test/warn-knob</property>
		  </or>
		</condition>
	</animation>
	
  <!-- Cover -->
  <animation>
    <type>rotate</type>
    <object-name>cover</object-name>
    <property>/controls/special/startercover[2]</property>
    <interpolation> 
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-90.0</dep>
            </entry>		
        </interpolation>
    <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
    </axis>
    <center>
    <x-m> 0.0045</x-m>
    <y-m> 0.0</y-m>
    <z-m> 0.013</z-m>
    </center>  
  </animation>

	<animation>
		  <type>pick</type>
		  <object-name>cover</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		        <property>/controls/special/startercover[2]</property>
		    </binding>
		    <binding>
		      <command>property-toggle</command>
		      <property>/sim/sound/switch3</property>
		    </binding>
		  </action>
	</animation>

	<animation>
		  <type>rotate</type>
		  <object-name>switch</object-name>
		  <property>/controls/special/starter[2]</property>
      <factor>-50</factor>
		  <axis>
		   <x>0</x>
		   <y>1</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m>0.0</x-m>
		  <y-m>0.0</y-m>
		  <z-m>0.0</z-m>
		  </center>  
	</animation>

	<animation>
		  <type>pick</type>
		  <object-name>switch</object-name>
		  <object-name>sockle</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		        <property>/controls/special/starter[2]</property>
		    </binding>
		    <mod-up>
          <binding>
		      <command>property-toggle</command>
		      <property>/controls/special/starter[2]</property>
          </binding>
        </mod-up>
		    <binding>
		      <command>property-toggle</command>
		      <property>/sim/sound/switch2</property>
		    </binding>
		  </action>
	</animation>	

</PropertyList>
