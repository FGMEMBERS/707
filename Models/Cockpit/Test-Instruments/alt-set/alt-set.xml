<?xml version="1.0"?>
<PropertyList>

    <path>altset.ac</path>

    <animation>
      <type>material</type>
      <object-name>AltSet.bezel</object-name>
      <emission>
          <red>0.256</red>
          <green>0.128</green>
          <blue>0.064</blue>
          <factor-prop>/controls/lighting/panel-norm</factor-prop>
      </emission>
    </animation>

	<animation>
		<type>material</type>
        <object-name>AltSet.cancel</object-name>
        <object-name>AltSet.knob</object-name>
		<condition>
			<less-than><property>/controls/lighting/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
        <object-name>AltSet.cancel</object-name>
        <object-name>AltSet.knob</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/controls/lighting/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>

  <animation>
		<type>material</type>
        <object-name>APalt1</object-name>
        <object-name>APalt2</object-name>
        <object-name>APalt3</object-name>
        <object-name>APalt4</object-name>
        <object-name>APalt5</object-name>
		<condition>
			<less-than><property>/controls/lighting/cabin-dim</property><value>0.6</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
        <object-name>APalt1</object-name>
        <object-name>APalt2</object-name>
        <object-name>APalt3</object-name>
        <object-name>APalt4</object-name>
        <object-name>APalt5</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/controls/lighting/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>
    

    <animation>
        <type>textranslate</type>
        <object-name>APalt1</object-name>
        <property>/autopilot/settings/target-altitude-ft</property>
        <factor>0.00001</factor>
        <step>10000</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>APalt2</object-name>
        <property>/autopilot/settings/target-altitude-ft</property>
        <factor>0.0001</factor>
        <step>1000</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>APalt3</object-name>
        <property>/autopilot/settings/target-altitude-ft</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>APalt4</object-name>
        <property>/autopilot/settings/target-altitude-ft</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>APalt5</object-name>
        <property>/autopilot/settings/target-altitude-ft</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

<!-- Hotspots -->
    <animation>
      <type>rotate</type>
      <object-name>AltSet.knob</object-name>
      <property>/autopilot/settings/target-altitude-ft</property>
        <factor>0.1</factor>
      <center>
      <x-m> 0.0</x-m>
      <y-m> 0.0278</y-m>
      <z-m> 0.0</z-m>
      </center>
      <axis>
        <x> 1 </x>
        <y> 0 </y>
        <z> 0 </z>
      </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>AltSetCancel.plane</object-name>
        <visible>false</visible>
        <action>
        <button>0</button>
        <binding>
          <command>property-assign</command>
          <property>/autopilot/settings/target-altitude-ft</property>
          <value>0.0</value>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch2</property>
        </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>AltSet.plane</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
		          <condition>
		              <not>
		                  <property>devices/status/keyboard/shift</property>
		              </not>
		          </condition>
		          <command>property-adjust</command>
		          <property>/autopilot/settings/target-altitude-ft</property>
		          <step>1</step>
		          <min>0.0</min>
		          <max>30000.0</max>
		          <wrap>false</wrap>
            </binding>
            <binding>
		          <condition>
		             <property>devices/status/keyboard/shift</property>
		          </condition>
		          <command>property-adjust</command>
		          <property>/autopilot/settings/target-altitude-ft</property>
		          <step>10</step>
		          <min>0.0</min>
		          <max>30000.0</max>
		          <wrap>false</wrap>
            </binding>
            <binding>
              <command>property-toggle</command>
              <property>/sim/sound/switch3</property>
            </binding>
        </action>
        
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
		          <condition>
		              <not>
		                  <property>devices/status/keyboard/shift</property>
		              </not>
		          </condition>
		          <command>property-adjust</command>
		          <property>/autopilot/settings/target-altitude-ft</property>
		          <step>-1</step>
		          <min>0.0</min>
		          <max>30000.0</max>
		          <wrap>false</wrap>
            </binding>            
            <binding>
		          <condition>
		             <property>devices/status/keyboard/shift</property>
		          </condition>
		          <command>property-adjust</command>
		          <property>/autopilot/settings/target-altitude-ft</property>
		          <step>-10</step>
		          <min>0.0</min>
		          <max>30000.0</max>
		          <wrap>false</wrap>
            </binding>
            <binding>
              <command>property-toggle</command>
              <property>/sim/sound/switch3</property>
            </binding>
        </action>
        <action>
            <button>3</button>
            <binding>		          
		          <condition>
			            <not>
			                <property>devices/status/keyboard/shift</property>
			            </not>
			        </condition>
		          <command>property-adjust</command>
		          <property>/autopilot/settings/target-altitude-ft</property>
		          <step>100</step>
		          <min>0.0</min>
		          <max>30000.0</max>
		          <wrap>false</wrap>
            </binding>
            <binding>		          
		          <condition>
			          <property>devices/status/keyboard/shift</property>
			        </condition>
		          <command>property-adjust</command>
		          <property>/autopilot/settings/target-altitude-ft</property>
		          <step>1000</step>
		          <min>0.0</min>
		          <max>30000.0</max>
		          <wrap>false</wrap>
            </binding>
            <binding>
              <command>property-toggle</command>
              <property>/sim/sound/switch3</property>
            </binding>
        </action>
        <action>
            <button>4</button>
            <binding>		          
		          <condition>
			            <not>
			                <property>devices/status/keyboard/shift</property>
			            </not>
			        </condition>
            <command>property-adjust</command>
            <property>/autopilot/settings/target-altitude-ft</property>
            <step>-100</step>
            <min>0.0</min>
            <max>30000.0</max>
            <wrap>false</wrap>
            </binding>            
            <binding>		          
		          <condition>
			            <property>devices/status/keyboard/shift</property>
			        </condition>
            <command>property-adjust</command>
            <property>/autopilot/settings/target-altitude-ft</property>
            <step>-1000</step>
            <min>0.0</min>
            <max>30000.0</max>
            <wrap>false</wrap>
            </binding>
            <binding>
              <command>property-toggle</command>
              <property>/sim/sound/switch3</property>
            </binding>
        </action>
    </animation>


</PropertyList>
