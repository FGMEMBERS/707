		  <x-m>-19.06</x-m>
		  <y-m>  0.54</y-m>
		  <z-m>  0.98</z-m>
			<roll-deg>0</roll-deg>
			<pitch-deg> 40</pitch-deg>
			<heading-deg> -26.5</heading-deg>
		</offsets>
	</model>
	
	<model>
		<name>seats</name>
		<path>Aircraft/707/Models/Cockpit/Equipment/seats/seats.xml</path>
		<offsets>
		  <x-m>0.0</x-m>
		  <y-m>0.0</y-m>
		  <z-m>0.0</z-m>
		</offsets>
	</model>

	<model>
		<name>yokes</name>
		<path>Aircraft/707/Models/Cockpit/Equipment/yokes/yokes.xml</path>
		<offsets>
		  <x-m>0.0</x-m>
		  <y-m>0.0</y-m>
		  <z-m>0.0</z-m>
		</offsets>
	</model>
	
	<animation>
		<type>select</type>
		<object-name>yokes</object-name>
		<condition>
      <not>
       <property>sim/yokes-visible</property>
