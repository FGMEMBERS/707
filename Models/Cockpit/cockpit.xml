<?xml version="1.0"?>
<PropertyList>
 <path>cockpit.ac</path>

	<!-- No preview for fgrun-->
	<animation>
		<object-name>LightVolume1</object-name>
		<object-name>LightVolume2</object-name>
		<nopreview/>
	</animation>
	
  <!-- internal light effect without rembrandt -->	
	<animation>
		<type>material</type>
		<object-name>firewarning</object-name>
		<object-name>panel</object-name> 
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.4</red>
		  <green>0.4</green>
		  <blue>0.4</blue>
		  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>cover</object-name>
		<object-name>interieur</object-name>
		<object-name>internal.sky</object-name>
		<object-name>window.pilot</object-name>
		<object-name>window.copilot</object-name>
		<object-name>window.piop</object-name>
		<object-name>window.coop</object-name>
		<object-name>window.side</object-name> 
		<object-name>pedestal</object-name> 
		<object-name>AileronTab</object-name>  
		<object-name>ElevatorTab</object-name>  
		<object-name>RudderTab</object-name>  
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.25</red>
		  <green>0.25</green>
		  <blue>0.25</blue>
		  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>window.front</object-name>  
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.2</red>
		  <green>0.2</green>
		  <blue>0.2</blue>
		  <factor-prop>/controls/lighting/cabin-dim</factor-prop>
		</emission>
	</animation>	
		
	<!-- Rembrand -  light -->
	<animation>
		<type>select</type>
		<object-name>LightVolume1</object-name>
		<condition>
			<property>/sim/rendering/rembrandt/enabled</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>LightVolume2</object-name>
		<condition>
				<property>/sim/rendering/rembrandt/enabled</property>
				<property>/controls/test/warn-knob</property>
		</condition>
	</animation>
	
	<!-- equipment -->
	<model>
		<name>panel-equipment</name>
		<path>Aircraft/707/Models/Cockpit/panel.xml</path>
