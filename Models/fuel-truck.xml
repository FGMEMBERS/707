<PropertyList>
	<path>fuel-truck.ac</path>
 
	<animation>
		<type>material</type>
		<object-name>fuel_truck</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.04</red>
		  <green>0.04</green>
		  <blue>0.04</blue>
		  <factor-prop>sim/multiplay/generic/float[0]</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>tube</object-name>
		<condition>
			<property>/services/fuel-truck/connect</property>
		</condition>	
	</animation>
		
</PropertyList>